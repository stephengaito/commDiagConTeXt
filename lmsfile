-- A Lua Make System file

require 'lms.litProgs'

lpTargets = litProgs.targets{
  mainDoc  = 'commdiag.tex',
  docDir    = 't-commdiag/doc/context/third/commdiag',
}

require 'lms.contextMod'

contextMod.targets(lpTargets, {
  moduleFiles = {
    't-commdiag.mkiv',
    't-commdiag.mpiv',
    't-commdiag.lua',
  },
  moduleDir = 't-commdiag/tex/context/third/commdiag',
})

require 'lms.contextDoc'

contextDoc.targets(lpTargets)